@model BaseControllerModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Application</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
<nav>
    <ul>
        <li>
            <a data-content="services" asp-controller="UserServices" asp-action="Index">Rent It</a>
        </li>
        <li>
            <a data-content="services" asp-controller="Services" asp-action="Index">Services</a>
        </li>
        <li>
            <a href="#" data-content="orders">Orders</a>
        </li>
        <li>
            <a href="#" data-content="reservations">Reservations</a>
        </li>
        @if (Model.TokenIsValid)
        {
            <li class="auth-link">
                <a id="login-link" asp-controller="Home" asp-action="LogOut">LogOut</a>
            </li>
        }
        else
        {
            <li class="auth-link">
                <a id="login-link" asp-controller="Home" asp-action="Login">Login</a>
            </li>
            <li class="auth-link">
                <a id="register-link" asp-controller="Home" asp-action="Registration">Register</a>
            </li>
        }
    </ul>
</nav>
@RenderBody()
<footer>
    <!-- Your footer content -->
</footer>
<script src="script.js"></script>
<script>
// Get all the <a> tags within the <nav> element
var navLinks = document.querySelectorAll('nav a');

// Function to add the 'active' class on mouseenter
function addActiveClass() {
    this.classList.add('active');
}

// Function to remove the 'active' class on mouseleave
function removeActiveClass() {
    this.classList.remove('active');
}

// Loop through each <a> tag and add event listeners for mouseenter and mouseleave
navLinks.forEach(function(link) {
    link.addEventListener('mouseenter', addActiveClass);
    link.addEventListener('mouseleave', removeActiveClass);
});

</script>
</body>
</html>